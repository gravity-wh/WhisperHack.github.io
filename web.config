<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <staticContent>
      <!-- Ensure IIS can serve Markdown sources used by client-side renderer -->
      <remove fileExtension=".md" />
      <mimeMap fileExtension=".md" mimeType="text/markdown" />

      <!-- Optional: make sure JSON is served with correct type on older IIS setups -->
      <remove fileExtension=".json" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>

    <security>
      <requestFiltering>
        <!-- Keep default behavior, but explicitly allow .md in locked-down environments -->
        <fileExtensions allowUnlisted="true">
          <add fileExtension=".md" allowed="true" />
          <add fileExtension=".json" allowed="true" />
        </fileExtensions>
      </requestFiltering>
    </security>
  </system.webServer>
</configuration>
